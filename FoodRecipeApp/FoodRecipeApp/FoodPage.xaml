                        </Grid>
                        <Grid Background="{x:Null}" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Right" Width="32" Height="32" Panel.ZIndex="5">
                            <Image Name="heart" Source="Resources/Icons/heart.png" Visibility="{Binding Fav, Converter={StaticResource BooleanToVisibilityConverter}}" Stretch="None"/>
                        </Grid>
                        <Grid PreviewMouseLeftButtonUp="StackPanel_PreviewMouseLeftButtonUp" Cursor="Hand">
                            <Label HorizontalContentAlignment="Center" Height="30" Content="{Binding Name}" Panel.ZIndex="1"
                               Background="White" Opacity="0.8" FontSize="18" VerticalAlignment="Bottom"/>
                            <Image Width="250" Height="170" Stretch="Fill" Source="{Binding Source, Converter={StaticResource converter}}"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
