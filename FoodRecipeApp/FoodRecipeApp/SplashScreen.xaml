<Window x:Class="FoodRecipeApp.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodRecipeApp"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="SplashScreen" Height="200" Width="400" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Grid Background="Orange">
        <Grid Width="300" Height="100">
            <Label Name="quote" Foreground="White" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                   FontSize="20" FontWeight="ExtraBlack">Welcome</Label>
        </Grid>
        <ProgressBar x:Name="progress" Width="200"  Minimum="0" Maximum="500" Value="0" Height="15" Canvas.Left="333" Canvas.Top="359"
                     VerticalAlignment="Bottom" Margin="0 0 0 30" BorderThickness="0" Background="LightYellow" Foreground="OrangeRed"/>
        <Button Name="turnOffButton" Background="Transparent" FontWeight="Light" BorderThickness="0"
                Foreground="AliceBlue" Content="turn off splashscreen on application startup"
                Click="turnOffButton_Click" Canvas.Left="333" Canvas.Top="293" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
